FROM python:3.11-slim

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Set working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml uv.lock ./
COPY src/ ./src/

# Install dependencies
RUN uv sync --frozen --no-dev

# Copy service-specific code
COPY src/Pifko/services/brewery_service/ .

# Service configuration
ENV PORT=8002
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8002/health')" || exit 1

# Alternative solutions (choose one):
# Option 1: Use uv run (recommended)
CMD ["uv", "run", "main.py"]

# Option 2: Use python -m uvicorn
# CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8002", "--reload"]

# Option 3: Use full path to uvicorn in venv
# CMD ["./.venv/bin/uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8002", "--reload"]